<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/far"
    android:background="@android:color/white"
    tools:context=".activity.login.LoginActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/etLoginUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100"
        android:layout_marginBottom="137dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/etLoginUsername"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_light"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/etLoginPassword"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_light"
        android:layout_marginTop="@dimen/normal"
        android:layout_marginBottom="@dimen/high"
        android:layout_below="@id/etLoginUsername"/>

    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLoginPassword"
        android:layout_alignEnd="@id/etLoginPassword"
        android:background="@color/cardview_dark_background"
        android:text="Masuk"
        android:textColor="@android:color/background_light" />


    <TextView
        android:id="@+id/goRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLoginPassword"
        android:layout_alignBaseline="@id/btLogin"
        android:background="@android:color/darker_gray"
        android:hint="Daftar sekarang"
        android:padding="@dimen/normal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100"
        android:layout_marginTop="180"
        android:text="BukuKu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />


</RelativeLayout>